<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trip_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@drawable/trip_gradient_bg">

        <!-- Left Icon Section -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_accent"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/trip_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ´"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Trip Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trip_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/trip_itinerary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Itinerary preview..."
                android:textSize="14sp"
                android:textColor="#E8F4FD"
                android:layout_marginTop="8dp"
                android:maxLines="2" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>